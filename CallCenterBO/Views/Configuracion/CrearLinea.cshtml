@model CallCenterBO.Models.Configuracion.CrearLineaModel

@{
    ViewData["Title"] = "CrearLinea";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CrearLinea</h2>

<h4>CrearLineaModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CrearLinea">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdLinea" class="control-label"></label>
                <input asp-for="IdLinea" class="form-control" />
                <span asp-validation-for="IdLinea" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Numero" class="control-label"></label>
                <input asp-for="Numero" class="form-control" />
                <span asp-validation-for="Numero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Empresa</label>
                @Html.DropDownListFor(x => Model.IdEmpresaProfesorSeleccionada, new SelectList(Model.EmpresasProfesores.Select(y => new SelectListItem(y.Value, y.Key.ToString())), "Value", "Text"))
            </div>
            <div class="form-group">
                <label asp-for="FechaDeAlta" class="control-label"></label>
                <input type="date" asp-for="FechaDeAlta" class="form-control" />
                <span asp-validation-for="FechaDeAlta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear Linea" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

