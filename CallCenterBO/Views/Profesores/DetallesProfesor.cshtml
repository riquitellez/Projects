@model CallCenterBO.Models.Profesores.DetallesProfesorModel

@{
    ViewData["Title"] = "DetallesProfesor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Detalles del Profesor</h2>

<div>
    <h4>Detalles del Profesor</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.NombreEmpresa)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NombreEmpresa)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.FechaDeAlta)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FechaDeAlta)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.FechaDeBaja)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FechaDeBaja)
        </dd>
    </dl>

    @if (Model.ClasesDadas != null && Model.ClasesDadas.Any())
    {
        foreach (var claseDada in Model.ClasesDadas)
        {
        <h5>Clases dadas</h5>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Hora inicio
            </dt>
            <dd>
                @claseDada.FechaHoraInicio.ToString("MM/dd/yy H:mm")
            </dd>
            <dt>
                Hora fin
            </dt>
            <dd>
                @claseDada.FechaHoraFin.ToString("MM/dd/yy H:mm")
            </dd>
            <dt>
                Código alumno
            </dt>
            <dd>
                @claseDada.CodigoAlumno
            </dd>
            <dt>
                Linea
            </dt>
            <dd>
                @claseDada.Linea
            </dd>
            @if (!string.IsNullOrWhiteSpace(claseDada.TipoDeIncidencia))
            {
            <dt>
                Tipo de incidencia
            </dt>
            <dd>
                @claseDada.TipoDeIncidencia
            </dd>
            }
        </dl>
        }
    }
</div>
    
<div>
    @Html.ActionLink("Editar", "EditarProfesor", new {idProfesor = Model.Id}) |
    <a asp-action="Index">Volver al listado</a>
</div>
