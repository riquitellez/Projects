@model CallCenterBO.Models.Profesores.EditarProfesorModel

@{
    ViewData["Title"] = "EditarProfesor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar Profesor</h2>

<h4>Editar Profesor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditarProfesor">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <p><mark>@Model.Mensaje</mark></p>
            <div class="form-group">
                <label asp-for="IdProfesor" class="control-label"></label>
                <input asp-for="IdProfesor" class="form-control" />
                <span asp-validation-for="IdProfesor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Empresa</label>
                @Html.DropDownListFor(x => Model.IdEmpresaSeleccionada, new SelectList(Model.EmpresasProfesores.Select(y => new SelectListItem(y.Value, y.Key.ToString())), "Value", "Text"))
            </div>
            <div class="form-group">
                <label asp-for="FechaDeAlta" class="control-label"></label>
                <input type="date" asp-for="FechaDeAlta" class="form-control" />
                <span asp-validation-for="FechaDeAlta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaDeBaja" class="control-label"></label>
                <input type="date" asp-for="FechaDeBaja" class="form-control" />
                <span asp-validation-for="FechaDeBaja" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver al listado</a>
</div>

