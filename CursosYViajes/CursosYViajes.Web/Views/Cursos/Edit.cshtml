@model CursosYViajes.Models.Cursos.EditarCursoModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar curso</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="IdCurso" class="form-control" type="hidden" />
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.DropDownListFor(x => Model.IdPais, new SelectList(Model.Paises.Select(y => new SelectListItem(y.Value, y.Key.ToString())), "Value", "Text"))
            </div>
            <div class="form-group">
                <label class="control-label">País no incluido</label>
                <input asp-for="PaisNuevo" class="form-control" />
                <span asp-validation-for="PaisNuevo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Fecha de alta</label>
                <input asp-for="FechaDeAlta" class="form-control" />
                <span asp-validation-for="FechaDeAlta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Precio Por Semana</label>
                <input asp-for="PrecioPorSemana" class="form-control" />
                <span asp-validation-for="PrecioPorSemana" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver al listado</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
